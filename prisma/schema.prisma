// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./tasks.db"
}

model TaskList {
  id              Int       @id @default(autoincrement())
  taskName        String
  taskDescription String
  data            String
  executeTime     DateTime
  startTime       DateTime?
  finishTime      DateTime?
  Records         Records[]
}

model Records {
  id         Int      @id @default(autoincrement())
  finishTime DateTime
  itemId     String
  task       TaskList @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId     Int
  error      String?
}
