generator client {
  provider      = "prisma-client-js"
  output        = "./client"
  binaryTargets = ["native", "darwin", "darwin-arm64", "windows", "linux-musl-openssl-3.0.x", "linux-musl", "linux-musl-arm64-openssl-3.0.x", "linux-musl-arm64-openssl-1.1.x", "debian-openssl-1.0.x", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "rhel-openssl-1.0.x", "rhel-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./tasks.db"
}

model TaskList {
  id              Int       @id @default(autoincrement())
  taskName        String
  taskDescription String
  data            String
  executeTime     DateTime
  startTime       DateTime?
  finishTime      DateTime?
  Records         Records[]
}

model Records {
  id         Int      @id @default(autoincrement())
  finishTime DateTime
  itemId     String
  task       TaskList @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId     Int
  error      String?
}
