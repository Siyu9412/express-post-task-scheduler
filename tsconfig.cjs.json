{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules", "dist", "scripts"]
}
