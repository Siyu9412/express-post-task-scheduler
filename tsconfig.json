{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist/esm",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules", "dist"]
}
